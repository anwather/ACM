{
    "properties": {
        "displayName": "Audit Orphaned Disks",
        "policyType": "Custom",
        "mode": "All",
        "description": "This policy audits if a managed disk has no owner",
        "parameters": {},
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Compute/disks"
                    },
                    {
                        "field": "Microsoft.Compute/disks/diskState",
                        "notEquals": "Attached"
                    }
                ]
            },
            "then": {
                "effect": "audit"
            }
        }
    }
}